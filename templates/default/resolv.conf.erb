#

<% if @search && @search.present? -%>
search <%= @search %>
<% end -%>
<% @nameservers.each do |nameserver| -%>
nameserver <%= nameserver %>
<% end %>
<% unless @options.empty? -%>
options <%= @options.map { |opt, val| val ? "#{opt}:#{val}" : opt }.sort.join(" ") %>
<% end -%>
